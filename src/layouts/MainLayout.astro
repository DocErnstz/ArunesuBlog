---

import GridLayout from './GridLayout.astro'
import Mail from '../components/Mail.astro';


export interface Props {
	title: string;
}

const { title } = Astro.props;

---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		
		<div class="container2 mx-auto	mt-5">
			<GridLayout GridNumber={1} >
				
			</GridLayout>
			<Mail />
			<div class="my-10 text-2xl text-center">Recent</div>
			<GridLayout GridNumber={2} >
				
			</GridLayout>
		</div>
       
	</body>
</html>

<style>
	.container2{
		max-width: 1280px;
	}
</style>